---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight-01.svg'
import highlight01mobile from '../../../assets/highlights/highlight-01-mobile.svg'
import highlight02 from '../../../assets/highlights/highlight-02.svg'
import highlight02mobile from '../../../assets/highlights/highlight-02-mobile.svg'
import highlight03 from '../../../assets/highlights/highlight-03.svg'
import highlight03mobile from '../../../assets/highlights/highlight-03-mobile.svg'
import highlight04 from '../../../assets/highlights/highlight-04.svg'
import highlight04mobile from '../../../assets/highlights/highlight-04-mobile.svg'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Complete Payment <strong>Visibility</strong>',
		text: 'Gain full transparency into your payment transactions with our intuitive dashboard. Track payments, deadlines, and account status in real-time. Keep your business running smoothly with clear insights and analytics.',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
	{
		title: 'Seamless <strong>Cross-Border Payments</strong>',
		text: 'Send and receive payments across Africa and beyond with ease. PayWithIt ensures fast, secure, and cost-effective transactions, no matter where you are. Eliminate the complexity of international payments and keep your business growing.',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: 'Secure <strong>Transaction Tracking</strong>',
		text: 'Track each payment in real-time with complete transparency. PayWithIt ensures that every transaction is logged and traceable, giving you peace of mind and full control over your finances.',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: 'GDPR-Compliant <strong>Data Security</strong>',
		text: 'Your security is our top priority. With PayWithIt, enjoy the highest level of data protection backed by European regulations. End-to-end encryption and regular security audits keep your financial data safe and secure.',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	}
]

---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
