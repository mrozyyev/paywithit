---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight-01.svg'
import highlight01mobile from '../../../assets/highlights/highlight-01-mobile.svg'
import highlight02 from '../../../assets/highlights/highlight-02.svg'
import highlight02mobile from '../../../assets/highlights/highlight-02-mobile.svg'
import highlight03 from '../../../assets/highlights/highlight-03.svg'
import highlight03mobile from '../../../assets/highlights/highlight-03-mobile.svg'
import highlight04 from '../../../assets/highlights/highlight-04.svg'
import highlight04mobile from '../../../assets/highlights/highlight-04-mobile.svg'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Streamlined <strong>Payment Processing</strong>',
		text: 'Increase the speed and efficiency of financial transactions with touchless payments, such as QR code payments. Enable swift and secure money transfers globally with services like Payoneer, Wise, PayPal, and Revolut.',
		image: highlight01,
		mobileImage: highlight01mobile,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		imagePosition: 'right'
	},
	{
		title: 'Robust <strong>Security Measures</strong>',
		text: 'Implement rigorous security with multi-factor verification and biometric recognition. Regular audits and advanced security strategies protect user data and build trust in fintech solutions.',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: '<strong>Seamless Payment Gateway</strong> Integration',
		text: 'Integrate payment gateways like Stripe, PayPal, and Zelle for secure and efficient online transactions. Leverage these tools to simplify compliance and enhance user experience.',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: '<strong>Real-Time</strong> Data Analysis',
		text: 'Provide real-time analytics to users with instant updates on account activities, spending patterns, and financial goals. Utilize Big Data and machine learning to deliver personalized insights.',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	},
	{
		title: 'Customizable <strong>Dashboards</strong>',
		text: 'Empower users with personalized dashboards to track financial performance. Enable goal-setting, expense monitoring, and investment oversight to foster sustained engagement.',
		image: highlight01,
		mobileImage: highlight01mobile,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		imagePosition: 'right'
	},
	{
		title: '<strong>Automated</strong> Processes',
		text: 'Streamline transactions and routine tasks with automation. Leverage AI and machine learning for efficient, error-free services that enhance user satisfaction and reduce operational costs.',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
