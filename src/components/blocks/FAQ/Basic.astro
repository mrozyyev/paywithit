---
// Basic FAQ section
// ------------
// Description: A section that contains a list of frequently asked questions with answers.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Accordion from '../../ui/Accordion.astro'
import Card from '../../ui/cards/partials/Card.astro'

// Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---
<Section id="FAQ" classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-pretty">
				Demystifying <strong>pricing,</strong> common queries resolved
			</h2>
			<p class="text-lg leading-relaxed">
				Curious about our pricing plans? We’re here to help. Below are some of the most frequently
				asked questions about our pricing options and how PayWithIt can streamline your financial operations.
			</p>
		</Col>
		<Col span="2" />
		<Col span="8">
			<Card classes="divide-y divide-neutral-100 dark:divide-neutral-800">
				<Accordion
					title="What is included in the free trial?"
					text="With our free trial, you'll get full access to all the premium features of PayWithIt for 30 days. Experience our seamless payment integrations, automation tools, and premium support, all at no cost during the trial period."
				/>
				<Accordion
					title="Can I change my plan later?"
					text="Absolutely! You can upgrade or downgrade your PayWithIt plan at any time from your account settings. Changes are instant, and any pricing adjustments will be automatically applied."
				/>
				<Accordion
					title="Are there any hidden fees?"
					text="No hidden fees. PayWithIt prides itself on transparent pricing. The price you see is the price you pay. No surprises, no additional charges beyond what’s listed."
				/>
				<Accordion
					title="What payment methods do you accept?"
					text="PayWithIt supports all major credit and debit cards including Visa, MasterCard, and American Express, as well as PayPal. For enterprise clients, we also offer flexible invoicing options for streamlined payments."
				/>
				<Accordion
					title="Do you offer discounts for annual subscriptions?"
					text="Yes! PayWithIt offers a significant discount for annual subscriptions. By selecting an annual plan, you can save up to 25% compared to monthly payments, ensuring greater value and savings."
				/>
			</Card>
		</Col>
		<Col span="2" />
	</Row>
</Section>


<style>
	.page-header {
		@apply mx-auto max-w-3xl;
	}
	.page-header__text {
		@apply text-lg leading-relaxed;
	}
</style>
