---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'

// Content
// - SEO
const SEO = {
	title: 'PayWithIt | Contact Us',
	description:
		'Have questions about PayWithIt or need assistance? Contact us today for support, inquiries, or feedback. Our team is here to help you maximize your PayWithIt experience.'
}

// - Page Header
const header = {
	title: 'Get Answers to Your <strong>PayWithIt</strong> Questions.',
	text: "Whether you have a question, need support, or want to share feedback, we're here to help. Reach out to us, and we'll respond promptly to assist you with PayWithIt."
}

---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
	<SocialProof classes="dark:bg-neutral-950/80" />
	<CTA />
</Layout>
