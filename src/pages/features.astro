---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Feature from '../components/blocks/features/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import featuresData from '../data/json-files/featuresData.json'
// - Feature Categories
const featuresAnalytics = featuresData.filter((feature) => feature.category === 'Analytics')
const featuresProductivity = featuresData.filter((feature) => feature.category === 'Productivity')
const featuresSecurity = featuresData.filter((feature) => feature.category === 'Security')
const featuresIntegrations = featuresData.filter((feature) => feature.category === 'Integrations')
const featuresSupport = featuresData.filter((feature) => feature.category === 'Support')

// Content
// - SEO
const SEO = {
	title: 'PayWithIt | Features to Simplify Payments & Boost Productivity',
	description:
		"Explore PayWithIt's cutting-edge features designed to simplify payments, enhance security, and streamline productivity. Join thousands of businesses and unlock seamless payment management and growth today!"
}
// - Page Header
const header = {
	title: 'Why you and your team will <strong>love</strong> PayWithIt.',
	text: 'Simplify payments, enhance security, and improve efficiency with powerful tools designed for businesses.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Feature
		title="Streamlined Payments"
		text="Effortlessly process payments from clients and customers using our intuitive platform."
		data={featuresProductivity}
	/>
	<Feature
		title="Advanced Security"
		text="Protect your financial transactions and sensitive data with our top-tier encryption and fraud detection systems."
		data={featuresSecurity}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Analytics & Insights"
		text="Access real-time payment insights and analytics to make informed decisions and optimize your business strategies."
		data={featuresAnalytics}
	/>
	<Feature
		title="Seamless Integrations"
		text="Connect with your favorite tools and automate financial workflows for a more efficient business operation."
		data={featuresIntegrations}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="24/7 Customer Support"
		text="Our dedicated support team is always available to assist you with payment issues and inquiries."
		data={featuresSupport}
	/>
	<CTA />
</Layout>
