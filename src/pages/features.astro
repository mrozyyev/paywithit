---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Feature from '../components/blocks/features/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import featuresData from '../data/json-files/featuresDataPWI.json'
// - Feature Categories
const featuresUserExperience = featuresData.filter((feature) => feature.category === 'User Experience')
const featuresSecurity = featuresData.filter((feature) => feature.category === 'Security')
const featuresUserEngagement = featuresData.filter((feature) => feature.category === 'User Engagement')
const featuresPayments = featuresData.filter((feature) => feature.category === 'Payments')
const featuresBenefits = featuresData.filter((feature) => feature.category === 'Benefits')

// Content
// - SEO
const SEO = {
	title: 'PayWithIt | Features to Simplify Payments & Enhance Security',
	description:
		"Explore PayWithIt's advanced features designed to simplify payments, enhance security, and improve financial management. Join businesses worldwide in optimizing payment workflows and achieving success!"
}
// - Page Header
const header = {
	title: 'Discover why businesses <strong>trust</strong> PayWithIt.',
	text: 'Revolutionize payment processing, elevate security, and boost efficiency with PayWithItâ€™s powerful tools for businesses.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Feature
		title="Enhanced User Experience"
		text="Build trust with your users through secure, seamless, and intuitive interactions."
		data={featuresUserExperience}
	/>
	<Feature
		title="Top-Tier Security"
		text="Safeguard your financial transactions with advanced encryption and biometric authentication."
		data={featuresSecurity}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Engaging User Notifications"
		text="Keep users informed with real-time notifications and alerts for transactions and account activities."
		data={featuresUserEngagement}
	/>
	<Feature
		title="Streamlined Payments"
		text="Offer a variety of payment options, including mobile payments and e-wallets, to enhance convenience."
		data={featuresPayments}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Financial Benefits"
		text="Empower users with tools like tax preparation assistance, budget planning, and real-time balance updates."
		data={featuresBenefits}
	/>
	<CTA />
</Layout>
