---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import TextImage from '../components/blocks/basic/TextImage.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqFeatures = faqData.filter((faq) => faq.category === 'features')
const faqSecurity = faqData.filter((faq) => faq.category === 'security')

// Content
import faqImage1 from '../assets/faq/faq-01.png'
// - SEO
const SEO = {
	title: 'PayWithIt | Get Your Questions Answered with Confidence',
	description:
		"Explore PayWithIt's FAQ section to find answers about features, security, integrations, and more. Learn how PayWithIt simplifies payments and enhances productivity."
}
// - Page Header
const header = {
	title: 'Answers to Your <strong>PayWithIt</strong> Questions.',
	text: 'Find answers to common questions about PayWithIt and discover how it can transform the way you manage your payments.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ
		title="Explore Features"
		text="Learn about the powerful features of PayWithIt. From seamless payment processing to insightful analytics, discover how our tools make financial management easier."
		data={faqFeatures}
	/>
	<TextImage
		title="Why Choose PayWithIt for Your Payment Needs"
		text="PayWithIt is designed to provide exceptional value with its innovative features and secure platform. Whether youâ€™re a small business or a large enterprise, we ensure that our tools cater to your unique financial management needs. Experience seamless integrations, robust security, and an intuitive user experience."
		image={faqImage1}
		mobileImage={faqImage1}
		imagePosition="left"
		offsetImage
		classes="bg-neutral-50 dark:bg-neutral-900 lg:!py-64"
	/>
	<FAQ
		title="Stay Secure"
		text="Security is at the core of PayWithIt. Explore how our advanced encryption and GDPR-compliant measures protect your transactions and data from threats."
		data={faqSecurity}
	/>
	<CTA />
</Layout>
